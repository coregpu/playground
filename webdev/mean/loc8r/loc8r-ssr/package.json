{
  "name": "loc8r-ssr",
  "version": "1.0.0",
  "description": "A server-side rendered app that shows places with good wifi where you can get some work done.",
  "main": "dist/app-server/app.js",
  "scripts": {
    "lint": "gulp lint",
    "build": "gulp build",
    "watch": "gulp watch",
    "start": "ENV_CONFIG_PATH=env-configs/.env.config node -r dotenv/config.js dist/app-server/app.js",
    "debug": "ENV_CONFIG_PATH=env-configs/.env.config node --inspect-brk -r dotenv/config.js dist/app-server/app.js",
    "nodemon": "ENV_CONFIG_PATH=env-configs/.env.config nodemon --delay 3 -r dotenv/config.js -w dist/ -w .env -e js",
    "build-start-watch": "npm run build && run-p nodemon watch",
    "clean": "rimraf dist/*",
    "populate-db": "npm run build && ENV_CONFIG_PATH=env-configs/.db-setup.env.config node dist/app-api/db-setup/populate-db.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Loc8r",
    "MEAN",
    "Express",
    "Angular",
    "Node",
    "Mongo"
  ],
  "author": "Dzanan Bajgoric",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "body-parser": "^1.19.1",
    "bootstrap": "^4.6.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-errors": "^2.0.0",
    "mongoose": "^6.1.0",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.10.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.1",
    "@types/http-errors": "^1.8.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "files-exist": "^1.1.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-sass": "^5.0.0",
    "merge-stream": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "typescript": "^4.4.4"
  }
}
